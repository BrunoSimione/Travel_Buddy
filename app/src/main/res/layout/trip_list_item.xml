<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="#cceeff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_trip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Trip Name"
                android:textSize="24dp"
                />
            <TextView
                android:id="@+id/tv_trip_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:hint="No Date"
                android:textSize="16dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/tv_trip_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Trip Location"
            android:textSize="18dp"
            android:layout_marginVertical="2dp"
            />

            <TextView
                android:id="@+id/tv_trip_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:hint="End Date"
                android:textSize="16dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_trip_daystogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Days to go: "
            android:textSize="18dp"
            android:layout_marginBottom="10dp"

            />
    </LinearLayout>
</android.support.v7.widget.CardView>